<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amrmarep_report_reason_listing.amrmarep_report_reason_listing_data_source</item>
            <item name="deps" xsi:type="string">amrmarep_report_reason_listing.amrmarep_report_reason_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">amrmarep_report_reason_columns</item>
    </argument>
    <dataSource name="amrmarep_report_reason_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Amasty\RmaReports\Model\Report\DataProvider\OverviewListing</argument>
            <argument name="name" xsi:type="string">amrmarep_report_reason_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">request_id</argument>
            <argument name="requestFieldName" xsi:type="string">request_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">request_id</item>
                        <item name="component" xsi:type="string">Amasty_RmaReports/js/grid/data-storage</item>
                        <item name="saveUrl" xsi:type="url" path="amrmarep/report/settingssave" />
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <columns name="amrmarep_report_reason_columns">
        <column name="name" class="Amasty\RmaReports\Ui\Component\Listing\Columns\ProductLink">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="fieldClass" xsi:type="string">amrma-grid-column</item>
                    <item name="component" xsi:type="string">Amasty_RmaReports/js/grid/link</item>
                    <item name="label" xsi:type="string" translate="true">Item</item>
                    <item name="link" xsi:type="string">name_link</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </column>
        <column name="times">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="fieldClass" xsi:type="string">amrma-grid-column</item>
                    <item name="label" xsi:type="string" translate="true">Returned, times</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </column>
        <column name="price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="fieldClass" xsi:type="string">amrma-grid-column</item>
                    <item name="label" xsi:type="string" translate="true">Price</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
