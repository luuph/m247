<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="amsociallogin_customer_authenticated">
        <observer name="amsociallogin_customer_authenticated" instance="Magento\Persistent\Observer\CustomerAuthenticatedEventObserver" />
    </event>

    <event name="customer_logout">
        <observer name="Amasty_SocialLogin::ClearSocialIdentifier"
                  instance="Amasty\SocialLogin\Observer\CustomerSession\ClearSocialIdentifier"/>
    </event>

    <event name="customer_register_success">
        <observer name="Amasty_SocialLogin::LinkSocialIdentifier"
                  instance="Amasty\SocialLogin\Observer\Customer\LinkSocialIdentifier" />
    </event>
</config>
