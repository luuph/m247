<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">

    <actionGroup name="AdminProductReviewEnablingActionGroup" extends="AdminApproveAllReviewsActionGroup">
        <arguments>
            <argument name="review"/>
        </arguments>
        <remove keyForRemoval="selectAll"/>
        <click selector="{{AdminReviewsGridElementsSection.ReviewCheckbox(review)}}"
               before="clickUpdateStatusActionDropdown" stepKey="clickOnReviewCheckbox"/>
        <scrollToTopOfPage after="clickOnReviewCheckbox" stepKey="scrollToTopOfPage"/>
    </actionGroup>
</actionGroups>
