<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">

    <test name="StorefrontSortingOutOfStockLastYesTest" extends="StorefrontSortingByPositionCheckingTest">

        <annotations>
            <features value="Amasty Improved Sorting"/>
            <stories value="Sort by correct work checking"/>
            <title value="Sort by Position checking"/>
            <description
                value="Check that Sort Out of Stock Last works correctly on Category Page And Search Page"/>
            <severity value="CRITICAL"/>
            <testCaseId value="IMPSORT-18"/>
            <group value="ImpSort"/>
            <group value="ImpSort_CPTS"/>
            <group value="impsortdev"/>
        </annotations>

        <before>
            <updateData createDataKey="createSimpleProductA4" entity="UpdateOutOfStockProduct"
                        stepKey="updateProductStockProductA4"/>
            <updateData createDataKey="createSimpleProductA7" entity="UpdateOutOfStockProduct"
                        stepKey="updateProductStockProductA7"/>
            <magentoCLI command="config:set cataloginventory/options/show_out_of_stock 1"
                        stepKey="enableShowOutOfStockProduct"/>
            <magentoCLI command="config:set amsorting/general/out_of_stock_last 1" stepKey="configOutOfStockLast"/>
            <magentoCLI command="indexer:reindex" arguments="inventory" stepKey="reindex"/>
            <magentoCLI command="cache:clean" arguments="config" stepKey="cleanCache"/>
        </before>

        <after>
            <magentoCLI command="config:set cataloginventory/options/show_out_of_stock 0"
                        stepKey="disableShowOutOfStockProduct"/>
            <magentoCLI command="config:set amsorting/general/out_of_stock_last 0" stepKey="configOutOfStockLastDefault"/>
        </after>

        <!-- Navigate to Category Page and sort page by Position. Check the result/-->

        <seeElement
            selector="{{StorefrontPageElementsSection.ProductsSequenceLast('Product A2','Product A4','Product A7')}}"
            stepKey="seeProductsSequence"/>
        <click selector="{{StorefrontCategoryTopToolbarSection.sortDirectionAsc}}"
               stepKey="setAscDescConfiguration"/>
        <seeElement
            selector="{{StorefrontPageElementsSection.ProductsSequenceLast('Product A5','Product A7','Product A4')}}"
            stepKey="seeProductsSequenceTwo"/>
        <!-- Navigate to Search Result Page and sort page by Relevance. Check the result/-->
        <amOnPage url="{{StorefrontCatalogSearchPage.url}}?q=redtst" stepKey="navigateToSRP"/>
        <selectOption userInput="Relevance"
                      selector="{{StorefrontCategoryTopToolbarSection.sortByDropdown}}"
                      stepKey="selectSortByOptionOnSRP"/>
        <seeElement
            selector="{{StorefrontPageElementsSection.ProductsSequenceLast('Product A9','Product A4','Product A7')}}"
            stepKey="seeProductsSequenceOnSRP"/>
        <click selector="{{StorefrontCategoryTopToolbarSection.sortDirectionDesc}}"
               stepKey="setAscDescConfigurationOnSRP"/>
        <seeElement
            selector="{{StorefrontPageElementsSection.ProductsSequenceLast('Product A3','Product A7','Product A4')}}"
            stepKey="seeProductsSequenceTwoOnSRP"/>
    </test>
</tests>
