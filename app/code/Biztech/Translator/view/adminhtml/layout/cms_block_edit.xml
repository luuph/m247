<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name='root'>
            <block
                class='Biztech\Translator\Block\Init'
                name='Biztech_Translator_Block_Init'
            />
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="translate-popup" template="Biztech_Translator::translator/translate.phtml" />
        </referenceContainer>
         <referenceBlock name="page.content">
            <block name="cms.block.form.translater" class="Biztech\Translator\Block\Adminhtml\CMS\Block" template="Biztech_Translator::translator/cms/block.phtml" as="cms_block_form_custom">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="collapsible" xsi:type="boolean">false</item>
                        <item name="label" xsi:type="string" translate="true" />
                        <item name="sortOrder" xsi:type="string">1000</item>
                        <item name="canShow" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">fieldset</item>
                        <item name="provider" xsi:type="string">cms_block_form.block_form_data_source</item>
                        <item name="form" xsi:type="string">cms_block_form.cms_block_form</item>
                        <item name="urlWizard" xsi:type="string">cms/block/edit</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>