<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" xsi:type="string" translate="true">Company Credit</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block
                class="Bss\CompanyCredit\Block\Customer\Account\CreditInfo"
                name="bss_companycredit_customer_account_credit_info"
                template="Bss_CompanyCredit::customer/credit_info.phtml"/>

            <block
                class="Bss\CompanyCredit\Block\Customer\Account\LogTransaction"
                name="bss_companycredit_customer_account_log_transaction"
                template="Bss_CompanyCredit::customer/log_transaction.phtml">

                <container
                    name="bss_companycredit_customer_account_log_transaction.companycredit.extra.column.header"
                    as="companycredit.extra.column.header"
                    label="Company Credit History Extra Column Header"/>

                <block
                    class="Bss\CompanyCredit\Block\Customer\Account\Container"
                    name="bss_companycredit_customer_account_log_transaction.companycredit.extra.container"
                    as="companycredit.extra.container">

                    <block
                        class="Magento\Framework\View\Element\Template"
                        name="sales.order.history.extra.container.data"
                        as="companycredit.extra.container.data"/>

                </block>
            </block>
        </referenceContainer>
    </body>
</page>
