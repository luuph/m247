<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_Commerce::modules_config" title="Bss Commerce">
                                <resource id="Bss_CustomPricing::config" title="Bss Custom Pricing Config" translate="title" />
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Bss_CustomPricing::custom_pricing" title="Custom Pricing">
                    <resource id="Bss_CustomPricing::custom_pricing_new_rule" title="Create Price Rule" translate="title" />
                    <resource id="Bss_CustomPricing::custom_pricing_edit_rule" title="Edit Price Rule" translate="title" />
                    <resource id="Bss_CustomPricing::custom_pricing_delete_rule" title="Delete Price Rule" translate="title" />
                    <resource id="Bss_CustomPricing::custom_pricing_update_product_price" title="Update Product Price" translate="title" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
