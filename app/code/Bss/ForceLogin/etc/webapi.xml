<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/bsscommerce/forcelogin/storeconfigs/:storeId">
        <service class="Bss\ForceLogin\Api\ModuleManagementInterface"
                 method="getModuleConfigs"/>
        <resources>
            <resource ref="Bss_ForceLogin::config_forcelogin"/>
        </resources>
    </route>
    <route method="GET" url="/V1/bsscommerce/forcelogin/storeconfigs/">
        <service class="Bss\ForceLogin\Api\ModuleManagementInterface"
                 method="getModuleConfigs"/>
        <resources>
            <resource ref="Bss_ForceLogin::config_forcelogin"/>
        </resources>
    </route>
</routes>
