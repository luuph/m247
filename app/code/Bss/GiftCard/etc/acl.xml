<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Bss_GiftCard::giftcard" title="Bss Gift Card" sortOrder="10">
                    <resource id="Bss_GiftCard::giftcard_code_pattern" title="Gift Code Pattern" sortOrder="10" />
                    <resource id="Bss_GiftCard::giftcard_code_account" title="Gift Code Account" sortOrder="20" />
                    <resource id="Bss_GiftCard::giftcard_template" title="Gift Card Template" sortOrder="30" />
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_GiftCard::config_giftcard" title="BSS Commerce: Gift Card configuration"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
