<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_MultiWishlist::config_section" title="Bss MultiWishlist Config"/>
                        </resource>
                    </resource>
                </resource>

                <resource id="Bss_MultiWishlist::multiwishlist" title="Bss Multi Wishlist" sortOrder="100">
                    <resource id="Bss_MultiWishlist::api" title="Allow API" sortOrder="10" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
