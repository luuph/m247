<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="fmeextensions" translate="label" sortOrder="1000">
            <label>FME Extensions</label>
        </tab>
        <section id="paymentmethod" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Restrict Payment Method</label>
            <tab>fmeextensions</tab>
            <resource>FME_RestrictPaymentMethod::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Module</label>
                    <comment>Enable Restrict Payment Method Module</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                    
                </field>
            </group>
        </section>
    </system>
</config>
