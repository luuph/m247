<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="fme_paymentmethod" resource="default" engine="innodb" comment="main Table">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="true" comment="Rule Id"/>
    <column xsi:type="varchar" name="name" nullable="true" length="255" comment="Name"/>
    <column xsi:type="text" name="message" nullable="true" comment="Restiction Message"/>
    <column xsi:type="smallint" name="status" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Status"/>
    <column xsi:type="smallint" name="operation" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="Operation"/>
    <column xsi:type="mediumtext" name="conditions_serialized" nullable="true" comment="Conditions Serialized"/>
    <column xsi:type="int" name="priority" padding="10" unsigned="true" nullable="false" identity="false" default="0" comment="SortOrder-Priority"/>
    <column xsi:type="varchar" name="apply_catalog_rule" nullable="true" length="100" comment="Apply Catalog Rules Products"/>
    <column xsi:type="text" name="noapply_catalog_rule" nullable="true" comment="Not Applied Catalog Rules Products"/>
    <column xsi:type="text" name="apply_coupon_id" nullable="true" comment="Apply Coupon Id"/>
    <column xsi:type="text" name="noapply_coupon_id" nullable="true" comment="Not Apply Coupon Id"/>
    <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" comment="Created At"/>
    <column xsi:type="datetime" name="updated_at" on_update="false" nullable="false" comment="Updated At"/>
    <column xsi:type="varchar" name="total_operation" nullable="true" length="32" comment="Opertion type"/>
    <column xsi:type="decimal" name="grandtotal" scale="2" precision="5" unsigned="false" nullable="true" comment="Base Grand Total"/>
    <column xsi:type="varchar" name="postcode" nullable="true" length="200" comment="Postal Codes"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
    </constraint>
  </table>
  <table name="fme_paymentmethod_store" resource="default" engine="innodb" comment="FME Payment Method Restriction To Store Linkage Table">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="true" comment="Rule ID"/>
    <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Store ID"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
      <column name="store_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_STORE_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_store" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_STORE_STORE_ID_STORE_STORE_ID" table="fme_paymentmethod_store" column="store_id" referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_STORE_STORE_ID" indexType="btree">
      <column name="store_id"/>
    </index>
  </table>
  <table name="fme_paymentmethod_customer_group" resource="default" engine="innodb" comment="fme_paymentmethod_customer_group">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="ID"/>
    <column xsi:type="smallint" name="customer_group" padding="5" unsigned="true" nullable="false" identity="false" comment="Customer Group ID"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
      <column name="customer_group"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_CSTR_GROUP_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_customer_group" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_CUSTOMER_GROUP_CUSTOMER_GROUP" indexType="btree">
      <column name="customer_group"/>
    </index>
  </table>
  <table name="fme_paymentmethod_customer" resource="default" engine="innodb" comment="fme_paymentmethod_customer">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Rule Id"/>
    <column xsi:type="smallint" name="entity_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Customer ID"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
      <column name="entity_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_CUSTOMER_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_customer" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_CUSTOMER_ENTITY_ID" indexType="btree">
      <column name="entity_id"/>
    </index>
  </table>
  <table name="fme_paymentmethod_restriction" resource="default" engine="innodb" comment="fme_paymentmethod_restriction">
    <column xsi:type="smallint" name="payment_id" padding="5" unsigned="true" nullable="false" identity="true" comment="Payment ID"/>
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Rule Id"/>
    <column xsi:type="varchar" name="payment_code" nullable="false" length="100" comment="Payment Code"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="payment_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_RESTRICTION_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_restriction" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_RESTRICTION_PAYMENT_ID" indexType="btree">
      <column name="payment_id"/>
    </index>
  </table>
  <table name="fme_paymentmethod_days" resource="default" engine="innodb" comment="fme_paymentmethod_days">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="ID"/>
    <column xsi:type="smallint" name="day_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Day ID"/>
    <column xsi:type="varchar" name="open_at" nullable="false" length="100" comment="Open Time"/>
    <column xsi:type="varchar" name="close_at" nullable="false" length="100" comment="Close Time"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
      <column name="day_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_DAYS_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_days" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_DAYS_DAY_ID" indexType="btree">
      <column name="day_id"/>
    </index>
  </table>
  <table name="fme_paymentmethod_country" resource="default" engine="innodb" comment="Catalog Product Frontend Action Table">
    <column xsi:type="smallint" name="country_id" padding="5" unsigned="true" nullable="false" identity="true" comment="Country ID"/>
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Rule Id"/>
    <column xsi:type="varchar" name="country_code" nullable="false" length="100" comment="Country Code"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="country_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_COUNTRY_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_country" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_COUNTRY_COUNTRY_ID" indexType="btree">
      <column name="country_id"/>
    </index>
  </table>
  <table name="fme_paymentmethod_region" resource="default" engine="innodb" comment="Payment Restriction By Region Table">
    <column xsi:type="smallint" name="rule_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Rule Id"/>
    <column xsi:type="smallint" name="region_id" padding="5" unsigned="true" nullable="false" identity="false" comment="Region ID"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="rule_id"/>
      <column name="region_id"/>
    </constraint>
    <constraint xsi:type="foreign" referenceId="FME_PAYMENTMETHOD_REGION_RULE_ID_FME_PAYMENTMETHOD_RULE_ID" table="fme_paymentmethod_region" column="rule_id" referenceTable="fme_paymentmethod" referenceColumn="rule_id" onDelete="CASCADE"/>
    <index referenceId="FME_PAYMENTMETHOD_REGION_REGION_ID" indexType="btree">
      <column name="region_id"/>
    </index>
  </table>
  <table name="quote" resource="default">
      <column xsi:type="text" name="fme_applied_rule_ids" nullable="true" comment="Applied Catalog rule ids to quote"/>
  </table>
</schema>
