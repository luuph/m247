<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Popup Manager</title>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">MageArray_Popup::popup</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit" name="popupcat_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit\Tabs" name="popup_edit_tabs">
                <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit\Tab\Form" name="popup_edit_tab_form"/>
                <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit\Tab\Visiblity" name="popup_edit_tab_visiblity"/>
                <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit\Tab\Settings" name="popup_edit_tab_settings"/>
                <block class="MageArray\Popup\Block\Adminhtml\Popup\Edit\Tab\CartConditions" name="popup_edit_tab_cartconditions"/>
                
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">popup_edit_tab_form</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">visiblity_section</argument>
                    <argument name="block" xsi:type="string">popup_edit_tab_visiblity</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">settings_section</argument>
                    <argument name="block" xsi:type="string">popup_edit_tab_settings</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">cartconditions_section</argument>
                    <argument name="block" xsi:type="string">popup_edit_tab_cartconditions</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>