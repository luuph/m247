<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="convertOscDataToOrder" instance="Mageplaza\Osc\Observer\QuoteSubmitBefore"/>
    </event>
    <event name="controller_action_predispatch_paypal_express_placeOrder">
        <observer name="osc_predispatch_paypal_express_placeOrder" instance="Mageplaza\Osc\Observer\PaypalExpressPlaceOrder"/>
    </event>
    <event name="sales_model_service_quote_submit_success">
        <observer name="convertOscDataToOrder" instance="Mageplaza\Osc\Observer\QuoteSubmitSuccess"/>
    </event>
    <event name="payment_cart_collect_items_and_amounts">
        <observer name="oscPaypalPrepareItems" instance="Mageplaza\Osc\Observer\PaypalPrepareItems"/>
    </event>
    <event name="checkout_submit_all_after">
        <observer name="osc_reindex_customer_grid" instance="Mageplaza\Osc\Observer\ReindexCustomer"/>
    </event>
    <event name="sales_quote_address_save_before">
        <observer name="osc_before_save_customer_address_attribute" instance="Mageplaza\Osc\Observer\QuoteAddressBeforeSave"/>
    </event>
    <event name="email_order_set_template_vars_before">
        <observer name="add_order_attribute_to_order" instance="Mageplaza\Osc\Observer\OrderEmail" />
    </event>
    <event name="email_invoice_set_template_vars_before">
        <observer name="add_custom_field_to_invoice" instance="Mageplaza\Osc\Observer\InvoiceEmail" />
    </event>
    <event name="email_shipment_set_template_vars_before">
        <observer name="add_custom_field_to_shipment" instance="Mageplaza\Osc\Observer\ShipmentEmail" />
    </event>
    <event name="email_creditmemo_set_template_vars_before">
        <observer name="add_custom_field_to_credit_memo" instance="Mageplaza\Osc\Observer\CreditMemoEmail" />
    </event>
    <event name="email_order_comment_set_template_vars_before">
        <observer name="add_custom_field_to_order_comment" instance="Mageplaza\Osc\Observer\OrderCommentEmail" />
    </event>
    <event name="email_invoice_comment_set_template_vars_before">
        <observer name="add_custom_field_to_invoice_comment" instance="Mageplaza\Osc\Observer\InvoiceCommentEmail" />
    </event>
    <event name="email_shipment_comment_set_template_vars_before">
        <observer name="add_custom_field_to_shipment_comment" instance="Mageplaza\Osc\Observer\ShipmentCommentEmail" />
    </event>
    <event name="email_creditmemo_comment_set_template_vars_before">
        <observer name="add_customfield_to_credit_memo_comment" instance="Mageplaza\Osc\Observer\CreditMemoCommentEmail" />
    </event>
</config>
