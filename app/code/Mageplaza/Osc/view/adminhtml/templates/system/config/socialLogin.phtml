/** @var \Mageplaza\Osc\Block\Adminhtml\Config\Backend\SocialLogin $block */

$checkInstall = $block->checkModuleSocialLogin();
?>
<div class="mp_social_login">
    <?php if ($checkInstall && $block->checkEnableModuleSocialLogin()): ?>
        <style type="text/css">
            #row_osc_display_general_social_login {
                display: none;
            }
        </style>
    <?php elseif ($checkInstall && !$block->checkEnableModuleSocialLogin()): ?>
        <span style="color:red;"><?= /** @noEscape */ __('Disable') ?></span>
        <p class="note">
            <span>Please enable the <a href="https://www.mageplaza.com/magento-2-social-login-extension/" target="_blank">Mageplaza Social Login</a>
                to allow customers signing in via their social networks.
            </span>
        </p>
        <style type="text/css">
            #row_osc_display_general_is_enabled_social_login {
                display: none;
            }
        </style>
    <?php else: ?>
        <span style="color:red;"><?= /** @noEscape */ __('Not installed') ?></span>
        <p class="note">
            <span>
                Allow customers signing in via their social networks. Only available if
                 <a href="https://www.mageplaza.com/magento-2-social-login-extension/" target="_blank">Mageplaza Social Login</a>
                  is installed and enabled.
            </span>
        </p>
    <?php endif; ?>
</div>
