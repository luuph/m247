<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <pdfinvoice>
            <module>
                <user_guide>pdf-invoice-m2</user_guide>
            </module>
            <general>
                <enabled>1</enabled>
                <business_information>
                    <logo_width>180</logo_width>
                    <logo_height>30</logo_height>
                </business_information>
            </general>
            <order>
                <enable>1</enable>
                <allow_groups>0</allow_groups>
                <label>Print PDF Order</label>
                <file_name>order_%increment_id</file_name>
                <generic_name>orders_%date</generic_name>
                <template>standard</template>
                <code_type>barcode</code_type>
                <print>2</print>
                <button_top>0</button_top>
                <note><![CDATA[<strong>Please always include your order number when making any payment!</strong></br></br>
                        <p>In case of check payment. Please mail the check to the following address <i>123 youraddress</i></p>
                        <p>For question/concerning regarding this order,please contact  <i>youremail@example.com</i></p>]]>
                </note>
            </order>
            <invoice>
                <enable>1</enable>
                <allow_groups>0</allow_groups>
                <label>Print PDF Invoice</label>
                <file_name>invoice_%increment_id</file_name>
                <generic_name>invoices_%date</generic_name>
                <template>standard</template>
                <code_type>barcode</code_type>
                <print>2</print>
                <orderGrid_button>0</orderGrid_button>
                <note><![CDATA[<strong>Please always include your invoice number when making any payment!</strong></br></br>
                        <p>In case of check payment. Please mail the check to the following address <i>123 youraddress</i></p>
                        <p>For question/concerning regarding this invoice,please contact  <i>youremail@example.com</i></p>]]>
                </note>
            </invoice>
            <shipment>
                <enable>1</enable>
                <allow_groups>0</allow_groups>
                <label>Print PDF Shipment</label>
                <file_name>shipment_%increment_id</file_name>
                <generic_name>shipments_%date</generic_name>
                <template>standard</template>
                <code_type>barcode</code_type>
                <print>2</print>
                <orderGrid_button>0</orderGrid_button>
                <note><![CDATA[<strong>Please always include your shipment number when making any payment!</strong></br></br>
                        <p>In case of check payment. Please mail the check to the following address <i>123 youraddress</i></p>
                        <p>For question/concerning regarding this shipment,please contact  <i>youremail@example.com</i></p>]]>
                </note>
            </shipment>
            <creditmemo>
                <enable>1</enable>
                <allow_groups>0</allow_groups>
                <label>Print PDF CreditMemo</label>
                <file_name>creditmemo_%increment_id</file_name>
                <generic_name>creditmemos_%date</generic_name>
                <template>standard</template>
                <code_type>barcode</code_type>
                <print>2</print>
                <orderGrid_button>0</orderGrid_button>
                <note><![CDATA[<strong>Please always include your creditmemo number when making any payment!</strong></br></br>
                        <p>In case of check payment. Please mail the check to the following address <i>123 youraddress</i></p>
                        <p>For question/concerning regarding this creditmemo,please contact  <i>youremail@example.com</i></p>]]>
                </note>
            </creditmemo>
            <design>
                <heading_color>#0099e5</heading_color>
                <page_number>1</page_number>
                <page_number_position>bottom</page_number_position>
                <page_size>A4</page_size>
                <pdf_margin>2;1.5;2;3</pdf_margin>
                <barcode_setting>
                    <barcode_size>0.9</barcode_size>
                    <barcode_type>C39E</barcode_type>
                    <barcode_attribute>sku</barcode_attribute>
                    <qrcode_attribute>sku</qrcode_attribute>
                </barcode_setting>
            </design>
            <template>
                <standard>Standard</standard>
                <standard_wimg>Standard with product image</standard_wimg>
                <professional>Professional</professional>
                <professional_wimg>Professional with product image</professional_wimg>
                <minimalism>Minimalism</minimalism>
                <minimalism_wimg>Minimalism with product image</minimalism_wimg>
                <elegant>Elegant</elegant>
                <elegant_wimg>Elegant  with product image</elegant_wimg>
                <impressive>Impressive</impressive>
                <impressive_wimg>Impressive with product image</impressive_wimg>
                <templateforA5>Template for A5</templateforA5>
                <templateforA5wimg>Template for A5 with product image</templateforA5wimg>
            </template>
        </pdfinvoice>
    </default>
</config>
