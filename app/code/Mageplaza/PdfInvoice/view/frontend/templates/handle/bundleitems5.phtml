<?php /** @var $block \Mageplaza\PdfInvoice\Block\BundleItems */ ?>

<?php
$parentItem = $block->getItem();
$type = $block->getType();
$items = $block->getChildren($parentItem);
$_index = 0;
$_order = $block->getOrder();
$block->setStoreId($_order->getStoreId());
$barcodeConfig = $block->getBarcodeConfig();
$codeType = $block->getCodeType();
$isBarcode = $block->getIsBarcode();
$pageSize = $block->getPageSize();
$a4Barcode = $isBarcode && ($pageSize === 'A4');
$a5Barcode = $isBarcode && ($pageSize === 'A5');
$pageSize === 'A5' ? $isBarcode = $a5Barcode : $isBarcode = $a4Barcode;
$_messageHelper = $block->getHelperMessage();
$isMessageEnable = ($_messageHelper->isMessagesAllowed('order_item', $parentItem) && $parentItem->getGiftMessageId());
$columnsConfig = $block->getColumnsConfig();
?>

<?php if ($isMessageEnable || $block->getItemOptions() || $parentItem->getDescription()): ?>
    <?php $_showlastRow = true ?>
<?php else: ?>
    <?php $_showlastRow = false ?>
<?php endif ?>

<?php $_prevOptionId = '' ?>
<div class="bundle-item <?= /** @noEscape */ $block->getIndexKey() ?>" style="border-bottom: 1px solid #ddd;">
    <?php foreach ($items

    as $_item): ?>
    <?php
    // As part of invoice item renderer logic, the order is set on each invoice item.
    // In the case of a bundle product, this template takes over rendering its children,
    // so it is necessary to pass the order along to each child.
    $_item->setOrder($_order);
    $codeValue = [];

    if ($barcodeConfig['barcode_attribute'] === 'sku') {
        $codeValue['barcode'] = $_item->getSku();
    } else if ($barcodeConfig['barcode_attribute'] === 'product_id') {
        $codeValue['barcode'] = $_item->getProductId();
    } else {
        $codeValue['barcode'] = $_item->getName();
    }

    if ($barcodeConfig['qrcode_attribute'] === 'sku') {
        $codeValue['qrcode'] = $_item->getSku();
    } else if ($barcodeConfig['qrcode_attribute'] === 'product_id') {
        $codeValue['qrcode'] = $_item->getProductId();
    } else {
        $codeValue['qrcode'] = $_item->getName();
    }
    ?>
    <tr class="mp-row">
        <?php
        foreach ($columnsConfig as $columnConfig) {
            if ($columnConfig['status']) {
                echo $block->getTdImpresiveHtml($columnConfig['name'], $isBarcode, $_item, $codeValue, 'invoice');
            }
        }
        ?>
    </tr>
    <div class="clr"></div>
<?php endforeach ?>
</div>

<?php if ($_showlastRow): ?>
    <div class="mp-row">
        <div class="item-extra">
            <?php if ($block->getItemOptions()): ?>
                <div>
                    <?php foreach ($block->getItemOptions() as $option): ?>
                        <div><strong><em><?= /* @noEscape */ $option['label'] ?></em></strong></div>
                        <div><?= /* @noEscape */ $option['value'] ?></div>
                    <?php endforeach ?>
                </div>
            <?php endif ?>
            <?= $block->escapeHtml($_item->getDescription()) ?>
        </div>
    </div>
<?php endif ?>
</div>
<div class="clr"></div>
