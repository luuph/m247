<?php
$item = $block->getData('item');
$classForEl = $block->getData('classForEl');
$isImpresive = $block->getData('isImpresive');
$hasParent = $block->getData('hasParent');
$_order = $block->getOrder();
?>
<?php if ($hasParent): ?>
    <?php if (isset($isImpresive) && $isImpresive): ?>
    <td class="<?= /** @noEscape */ $classForEl ?>">
    <?php else: ?>
    <div class="<?= /** @noEscape */ $classForEl ?>">
    <?php endif; ?>
    <?php if ($block->displayPriceExclTax() || $block->displayBothPrices()): ?>
        <?php if ($block->displayBothPrices()): ?>
            <span class="label"><?= /* @noEscape */
                __('Excl. Tax') ?>:</span>
        <?php endif ?>
        <?= /* @noEscape */
        $_order->formatPrice($item->getPrice()) ?>
    <?php endif ?>

    <?php if ($block->displayPriceInclTax() || $block->displayBothPrices()): ?>
        <?php if ($block->displayBothPrices()): ?>
            <br/><span class="label"><?= /* @noEscape */
                __('Incl. Tax') ?>:</span>
        <?php endif ?>
        <?= /* @noEscape */
        $_order->formatPrice($item->getPriceInclTax()) ?>
    <?php endif ?>
    <?php if (isset($isImpresive) && $isImpresive): ?>
    </td>
    <?php else: ?>
    </div>
    <?php endif ?>
<?php endif ?>
