<?php
$_creditmemo = $block->getCreditmemo();
$_order = $block->getOrder();
$storeId = $_order->getStoreId();
$codeType = $block->getCodeType('creditmemo', $storeId);
$barcodeConfig = $block->getBarcodeConfig($storeId);
$isBarcode = !($codeType === 'no_code');
$columnsConfig = $block->getColumnsConfig('creditmemo');
$numberColumn = $block->getNumberColumn($columnsConfig, 4);
$pageSize = $block->getPageSize();
$a4Barcode = $isBarcode && ($pageSize == 'A4');
$a5Barcode = $isBarcode && ($pageSize == 'A5');
$_store = $_order->getStore();
$_imageHelper = $block->getHelperImage();
$_baseImageUrl = $_store->getBaseUrl(\Magento\Framework\UrlInterface::URL_TYPE_MEDIA).'catalog/product';
if ($pageSize == 'A7' || $pageSize == 'A6'){
    ?>
    <style>
        .mp-invoice-barcode {
            display: none;
        }
        .mp-item,.mp-qty,.mp-price,.mp-subtotal,.mp-tax,.mp-discount,.mp-image {
            font-size: 0.6rem;
        }
    </style>
<?php } ?>
<?php
if ($pageSize == 'A5'): ?>
    <style>
        .mp-item,.mp-qty,.mp-price,.mp-subtotal,.mp-tax,.mp-discount,.mp-image {
            font-size: 0.75rem;
        }
    </style>
<?php endif ?>
<?php if ($_creditmemo && $_order): ?>
    <table class="table-items">
        <tr class="mp-row mp-heading">
            <th class="<?= /** @noEscape */ $a4Barcode ? 'mp-image-bc' : 'mp-image' ?>">
                <span><?= /* @noEscape */
                    __('Image') ?><span>
            </th>
            <?php
            foreach ($columnsConfig as $columnConfig) {
                if ($columnConfig['status']) {
                    echo $block->getThImpresiveHtml($columnConfig['name'],$a4Barcode);
                }
            }
            ?>
        </tr>
        <?php $i = 0 ?>
        <?php foreach ($_creditmemo->getAllItems() as $_item): ?>
            <?php $codeValue = $block->getCodeValue($_item, $storeId) ?>
            <?php
            $block->setItem($_item);
            $indexKey = $i % 2 == 0 ? "odd" : "even";
            if ($block->isBundleItem()) {
                echo /** @noEscape */ $block->renderBundleItem($_item, $_order, $block->getInvoiceType(), $indexKey, $codeType, $barcodeConfig, $isBarcode, 'bundleitems5wimg.phtml', $columnsConfig);
                $i++;
                continue;
            }

            if ($_item->getOrderItem()->getParentItem()) {
                continue;
            }
            $i++;
            ?>
            <tr class="mp-row <?= /** @noEscape */ $indexKey ?>" style="border-bottom: 1px solid #ddd;">
                <td class="<?= /** @noEscape */ $a4Barcode ? 'mp-image-bc' : 'mp-image' ?>">
                    <img style="max-height:80px" src="<?= /** @noEscape */ $_imageHelper->init($_item->getOrderItem()->getProduct(), 'small_image',
                        ['type'=>'small_image'])->keepAspectRatio(true)->resize('65','65')->getUrl();?>"
                         alt="<?= /** @noEscape */ __('Product Image');?>">
                </td>
                <?php
                foreach ($columnsConfig as $columnConfig) {
                    if ($columnConfig['status']) {
                        echo $block->getTdImpresiveHtml($columnConfig['name'], $a4Barcode, $_item, $codeValue, 'creditmemo');
                    }
                }
                ?>
            </tr>
            <div class="clr"></div>
        <?php endforeach ?>
    </table>
    <div class="order-totals">
        <?= $block->getChildHtml('creditmemo_totals') ?>
    </div>
<?php endif ?>
