<?php /** @var $block \Mageplaza\PdfInvoice\Block\BundleItems */ ?>

<?php
$parentItem = $block->getItem();
$barcodeConfig = $block->getBarcodeConfig();
$codeType = $block->getCodeType();
$isBarcode = $block->getIsBarcode();
$pageSize = $block->getPageSize();
$columnsConfig = $block->getColumnsConfig();
$a4Barcode = $isBarcode && ($pageSize == 'A4');
$a5Barcode = $isBarcode && ($pageSize == 'A5');
$pageSize === 'A5' ? $isBarcode = $a5Barcode : $isBarcode = $a4Barcode;
$_order = $block->getOrder();
$_messageHelper = $block->getHelperMessage();
$block->setStoreId($_order->getStoreId());
?>
<?php $items = array_merge([$parentItem], $parentItem->getChildrenItems()) ?>
<?php if ($block->getItemOptions() || $parentItem->getDescription() || $_messageHelper->isMessagesAllowed('order_item', $parentItem) && $parentItem->getGiftMessageId()): ?>
    <?php $_showlastRow = true ?>
<?php else: ?>
    <?php $_showlastRow = false ?>
<?php endif ?>

<?php $_prevOptionId = '' ?>
    <?php foreach ($items

    as $_item): ?>
    <?php
        $codeValue = [];

        if ($barcodeConfig['barcode_attribute'] === 'sku') {
            $codeValue['barcode'] = $_item->getSku();
        } else if ($barcodeConfig['barcode_attribute'] === 'product_id') {
            $codeValue['barcode'] = $_item->getProductId();
        } else {
            $codeValue['barcode'] = $_item->getName();
        }

        if ($barcodeConfig['qrcode_attribute'] === 'sku') {
            $codeValue['qrcode'] = $_item->getSku();
        } else if ($barcodeConfig['qrcode_attribute'] === 'product_id') {
            $codeValue['qrcode'] = $_item->getProductId();
        } else {
            $codeValue['qrcode'] = $_item->getName();
        }
    ?>
<tr class="mp-row <?= /** @noEscape */ $block->getIndexKey() ?>" style="border-bottom: 1px solid #ddd;">
        <?php
        foreach ($columnsConfig as $columnConfig) {
            if ($columnConfig['status']) {
                echo $block->getTdImpresiveHtml($columnConfig['name'], $isBarcode, $_item, $codeValue, 'order');
            }
        }
        ?>
</tr>
    <div class="clr"></div>
<?php endforeach ?>

<?php if ($_showlastRow): ?>
    <div class="item-extra">
        <?php if ($block->getItemOptions()): ?>
            <div>
                <?php foreach ($block->getItemOptions() as $option): ?>
                    <div><strong><em><?= /* @noEscape */
                                $option['label'] ?></em></strong></div>
                    <div><?= /* @noEscape */
                        $option['value'] ?></div>
                <?php endforeach ?>
            </div>
        <?php endif ?>
        <?php if ($_item->getGiftMessageId() && $_giftMessage = $_messageHelper->getGiftMessage($_item->getGiftMessageId())): ?>
            <table class="message-gift">
                <tr>
                    <td>
                        <h3><?= /* @noEscape */
                            __('Gift Message') ?></h3>
                        <strong><?= /* @noEscape */
                            __('From:') ?></strong> <?= $block->escapeHtml($_giftMessage->getSender()) ?>
                        <br/><strong><?= /* @noEscape */
                            __('To:') ?></strong> <?= $block->escapeHtml($_giftMessage->getRecipient()) ?>
                        <br/><strong><?= /* @noEscape */
                            __('Message:') ?></strong>
                        <br/><?= $block->escapeHtml($_giftMessage->getMessage()) ?>
                    </td>
                </tr>
            </table>
        <?php endif ?>
    </div>
    <div class="clr"></div>
<?php endif ?>
