<div class="switcher language switcher-language" data-ui-id="language-switcher" id="switcher-language<?php /* @escapeNotVerified */ echo $id?>">
    <strong class="label switcher-label"><span><?php /* @escapeNotVerified */ echo __('Language') ?></span></strong>
    <div class="actions dropdown options switcher-options">
        <div class="action toggle switcher-trigger" id="switcher-language-trigger<?php /* @escapeNotVerified */ echo $id?>">
            <strong class="view-<?php echo $block->escapeHtml($block->getCurrentStoreCode()) ?>">
                <span style="display: inline-block;padding-right: 35px;background-position: 94% 42%!important;
 background-size: auto 100%;background-repeat: no-repeat;background-image:url('<?php /* @escapeNotVerified */ echo $block->getViewFileUrl('images/flags/flag_' . $block->escapeHtml($block->getCurrentStoreCode()) . '.png') ?>');"><?php if( trim($block->escapeHtml($block->getStoreName())) == "English" ){ echo "انجليزي"; }elseif(trim($block->escapeHtml($block->getStoreName())) == "Arabic"){ echo "عربي"; }else{ echo trim($block->escapeHtml($block->getStoreName())); } ?></span>
