                            <?php if( trim($block->escapeHtml($_lang->getName())) == "English" ){ echo "انجليزي"; }elseif(trim($block->escapeHtml($_lang->getName())) == "Arabic"){ echo "عربي"; }else{ echo trim($block->escapeHtml($_lang->getName())); } ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
