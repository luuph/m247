<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">                
            <referenceBlock name="product.attributes">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">معلومات</argument>
                </arguments>
            </referenceBlock>
        </referenceBlock>
        <move element="product.info.sku" destination="product.info.price" before="product.info.stock.sku" />
        <move element="product.price.final" destination="product.info.price" after="product.info.stock.sku" />
        <move element="product.info.review" destination="product.info.price" after="product.info.sku" />
    </body>
</page>