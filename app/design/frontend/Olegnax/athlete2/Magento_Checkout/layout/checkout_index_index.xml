<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block name="athlete2_header_checkout" class="Olegnax\Athlete2\Block\Template" template="Magento_Checkout::checkout/header.phtml" before="main.content">
            </block>
        </referenceContainer>
        <move element="logo" destination="athlete2_header_checkout"/>
        <referenceBlock name="page.main.title" remove="true"/>
        <!-- Header -->
        <referenceBlock name="athlete2_header" remove="true"/>
        <referenceBlock name="athlete2_navigation" remove="true"/>
        <referenceBlock name="header_banner" remove="true" />
        <referenceBlock name="header_banner_top" remove="true"/>
        <referenceBlock name="header_banner_before" remove="true"/>
        <referenceContainer name="athlete2_before_header" remove="1" />
        <referenceContainer name="header_top_container" remove="1" />
        <!-- Footer -->
        <referenceBlock name="above_footer_block" remove="true" />
        <referenceBlock name="above_footer_banner" remove="true" />
        <referenceContainer name="above_footer" remove="1" />
        <referenceContainer name="athlete2_bottom_nav_container" remove="1" />
        <referenceBlock name="ox_bottom_nav" remove="1" />        
        <!-- Theme optional js/css -->
        <referenceBlock name="ox_athlete2_ajax_add_to_cart" remove="true"/>
        <referenceBlock name="ox_videojs_init" remove="true"/>
        <referenceBlock name="ox_waypoints_init" remove="true"/>
        <referenceBlock name="ox_anim_banners" remove="true"/>
        <referenceBlock name="move_style" remove="true"/>
        <referenceBlock name="ox_athlete2_expand" remove="true"/>
        <referenceBlock name="ox_video_lazy" remove="true"/>
    </body>
</page>
